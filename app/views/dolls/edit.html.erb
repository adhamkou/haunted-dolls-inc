<h1 class='text-white mt-4 d-flex justify-content-center'>Edit your doll posting</h1>
<div class="container form col-8 text-white mt-5 mb-5">
  <%= simple_form_for(@doll) do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :image, as: :file %>
    <%= f.submit %>
  <% end %>
</div>
